      <div class="header_section">
        <%= yield :header_section %>
      </div>
      <%= yield :index_section %>
    </div>
  </div>

<%

        def scan_until(regex)
          match = @string.match(regex)
          return unless match
          @string = match.post_match
          match
        end

        def add_slide_links(html)
          my_path = content_for(:output_path)
          link = "slides_#{ my_path&.gsub('./output/', '') }"
          #puts "linking to #{link}"

          @string = html.dup

          pending = ""
          output = "<div class='slide'><a id='slide-1'></a>\n"
          i = 1

          until @string.empty?
            match =  scan_until /^(<h[23456].*?>|<hr>+|^(<p>)*ยง(<.p>)*)$/m

            break if !match

            output << match.pre_match

            output << "</div>\n<div class='slide'>\n<a class='slide_break' id='slide-#{i}' href='#{link}#slide-#{i}'>โป</a>\n"
            i += 1
            if match[0] =~ /ยง/ then
              # discard match
            else 
              output << match[0]
            end
          end # untile @string.empty?

          output << @string
          output << "</div>"

          output           
        end
      %>  

  <div id="container">
    <div class="wrapper">
      <div id="mainCol">
        <%= add_slide_links(yield).html_safe %>        
      </div>
    </div>
  </div>

